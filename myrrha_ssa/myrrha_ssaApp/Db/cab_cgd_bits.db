# Bits of the CGD status registers.

record(bi, "$(PREFIX):ExtIntlk1") {
    field(DESC, "External interlock 1 state")
    field(INP, "$(PREFIX):GeneralStat1.B0 CP MSS")
    field(ZNAM, "Interlock active")
    field(ONAM, "No interlock")
}

